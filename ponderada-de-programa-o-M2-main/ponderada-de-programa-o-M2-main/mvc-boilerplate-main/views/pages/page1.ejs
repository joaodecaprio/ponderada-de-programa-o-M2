<style>
  body, html {
    background: #18182f !important;
    color: #fff !important;
    min-height: 100vh;
    height: 100%;
    margin: 0;
    padding: 0;
  }
  .stitch-img {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    margin-top: 0;
    margin-bottom: 32px;
    width: 100%;
  }
  .stitch-img img {
    width: 700px;
    max-width: 98vw;
    border-radius: 22px;
    box-shadow: 0 4px 18px #7f5cff33;
  }
  .login-main-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    margin-top: 0;
  }
  .login-card {
    background: #23234b;
    border-radius: 22px;
    box-shadow: 0 8px 32px #7f5cff33;
    padding: 32px 24px;
    display: flex;
    flex-direction: column;
    gap: 18px;
    min-width: 320px;
    max-width: 400px;
    width: 100%;
    align-items: center;
    margin-top: 0;
  }
  .login-card h2 {
    text-align: center;
    color: #7f5cff;
    margin-bottom: 10px;
  }
  .login-card input {
    padding: 10px;
    border-radius: 8px;
    border: 1.5px solid #7f5cff;
    background: #18182f;
    color: #fff;
    font-size: 15px;
  }
  .login-card button {
    padding: 10px 0;
    border-radius: 10px;
    border: none;
    background: linear-gradient(90deg,#7f5cff,#43e97b);
    color: #fff;
    font-size: 1em;
    font-weight: 500;
    letter-spacing: 1px;
    cursor: pointer;
    box-shadow: 0 2px 8px #7f5cff44;
    transition: background 0.2s;
  }
  @media (max-width: 900px) {
    .stitch-img img {
      width: 98vw;
      max-width: 98vw;
    }
    .login-card {
      min-width: 0;
      max-width: 98vw;
    }
  }
</style>
<div class="stitch-img">
  <img src="/sthich.jpg" alt="Stitch">
</div>
<div class="login-main-container">
  <form action="/user" method="POST" class="login-card">
    <h2>Login</h2>
    <input type="text" id="name" name="name" required placeholder="Nome">
    <input type="email" id="email" name="email" required placeholder="E-mail">
    <button type="submit">Entrar</button>
  </form>
</div>

